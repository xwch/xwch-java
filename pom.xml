        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>xwch-service-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>xwch-web</artifactId>
            <version>${project.version}</version>
